<?xml version="1.0" encoding="UTF-8" ?>
<ids-configure>
	<!-- 接入passport的应用的根访问url，不需要带http、https等访问协议 -->
	<server-name>$[admin.sso.server.name]</server-name>
	<!-- 应用的auth url-->
	<auth-url>$[admin.sso.auth.url]</auth-url>
	<!-- 指定获取用户登录状态的URL-->
	<auth-status-url>$[admin.sso.auth.status.url]</auth-status-url>
	<!-- 指定登录认证服务器web应用的URL-->
	<auth-server-url>$[admin.sso.auth.server.url]</auth-server-url>
	<!--登录页面定制样式名称-->
	<login-theme>$[admin.sso.login.theme]</login-theme>
	<!--设置 AuthId 的cookie名。目前统一设置为authId-->
	<auth-id-cookie-name>authId</auth-id-cookie-name>
	<!--设置secureToken的cookie名 目前统一设置为secureToken-->
	<secure-token-cookie-name>secureToken</secure-token-cookie-name>
	<!--设置AuthId cookie的域，应设置应用所在大域，如.cnsuning.com-->
	<cookie-domain>.cnsuning.com</cookie-domain>
	<!--设置passport-client是否信任所有的https证书  目前都设置为true-->
	<trust-all-certs>true</trust-all-certs>
</ids-configure>
