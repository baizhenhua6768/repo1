<?xml version="1.0" encoding="UTF-8" ?>
<sqlMap namespace="categoryRel_admin" jdbcTimeout="5">

    <!-- 根据导购工号查询擅长品类 -->
    <sql id="queryByGuideId">
        <![CDATA[
           SELECT
                cr.CATEGORY_ID AS categoryId,
                vc.CATEGORY_NAME AS categoryName
           FROM
                o2ob_v_category_rela cr
           LEFT JOIN
                o2ob_v_category vc
           ON
                cr.CATEGORY_ID = vc.CATEGORY_CODE
           WHERE
                cr.GUIDE_ID = :guideId
        ]]>
    </sql>

    <!-- 根据导购工号删除擅长品类 -->
    <sql id="deleteByGuideId">
    <![CDATA[
            DELETE FROM
                o2ob_v_category_rela
            WHERE
                GUIDE_ID = :guideId
        ]]>
    </sql>
    <!-- 根据导购工号查询擅长品类编码 -->
    <sql id="queryGuideCategoryCode">
        <![CDATA[
           SELECT
                CATEGORY_ID
           FROM
                o2ob_v_category_rela
            where
                GUIDE_ID = :guideId
        ]]>
    </sql>
</sqlMap>